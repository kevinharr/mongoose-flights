<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
    </a>
    <div><%= flight.airline %></div>
    
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNumber %></div>
    <div>Departs: </div>
    <div><%= flight.departs.toISOString().slice(0, 16) %></div>
    <div>Meals</div>
    <ul>
      <% flight.meals.forEach(Meals => { %>
        <li><%= meal.name %></li>
      <% }) %>
    </ul>
    </section>

    <form id="add-meal" action="/flights/<%= flight._id %>/meals" method="POST">
      <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value=""<% meal._id %>"><%= meal.name %></option>
        <% }) %>
      </select>
      <button type=""submit">Add to Meals</button>
    </form>
  

  <br>

  <h2>Tickets</h2>

  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>

    <form 
        id="ticket-form" 
        action="/flights/<%= flight._id %>/tickets"
        method="POST
      >

      <label for="seat-input">Seat:</label>
      <input name="seat" required pattern="[A-F]{1-9]\d?" type="text">

      <label for="price-input">Price:</label>
      <input name="price" type="number" id="ticket-price">
      
      <button type="submit">Add Ticket</button>
    </form>

</main>
  
<%- include('../partials/footer') %>

